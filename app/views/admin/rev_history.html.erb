<div class="rev_banner">
    <h1>예약 확인 내역</h1>
    <div class="rev_inner"></div>
</div>
<div class="rev_history">
    <% @list.each do |p| %>
    <% @result = Reservation.find(p.reservation) %>
    <div class="rev_box">
        <p>요청내역 </p>
        <p><%= User.find(p.user).email%> 님</p>
        <p><%= @result.people %> 명 </p>
        <p><%= @result.time.split("T")[0] %> <%= @result.time.split("T")[1] %> 부터
            <%= @result.durationTime %> 시간
        </p>
    </div>
    <% end %>
</div>
<style>
    *{
        box-sizing: border-box;
    }
    html,body{
        margin: 0;
        padding: 0;
        height: 100%;
    }
    .rev_banner{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        align-content: center;
        width: 100%;
        height: 30%;
    }
    .rev_inner{
        content: '';
        height: 100%;
        display: flex;
        justify-content: center;
        background-color: #ffffff;
        display: block;
        height: 2px;
        margin: 0.325em 0 0.5em 0;
        width: 80%;
    }
    #wrapper{
        height: 100%;
    }
    .rev_history{
        display: flex;
        justify-content: center;
        align-content: center;
        width: 100%;
        height: 50%;
        background-color: #f9f9fb;
    }
    .rev_box{
        display: flex;
        justify-content: center;
        align-content: center;
        align-items: center;
        flex-direction: column;
        color: black;
        margin: 3%;
        width: 50%;
        height: 100%;
        height: auto;
        border: 1px solid grey;
    }
</style>