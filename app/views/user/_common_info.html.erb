<div class="add_info_container">
  <h2 class="ui orange image header nicImage">
  <div class="content">
    추가 정보입력
  </div>
</h2>
<%= form_tag(user_infoget_path) do %>
<div class="ui raised segment">
  <div class="ui field">
    <div class="add_info">
      <label for="phone" >phone</label>
      <div class="input_phone">
        <div class="phone_field">
        <%= text_field_tag :phone1, nil, maxlength: "3", :value => "010", placeholder: "010", pattern: "[0-9]{2,3}" %>
        </div>
        -
        <div class="phone_field">
            <%= text_field_tag :phone2, nil, maxlength: "4", placeholder: "0000", pattern: "[0-9]{4}", title: "4자리 숫자를 입력하세요." %>
        </div>
        -
        <div class="phone_field">
            <%= text_field_tag :phone3, nil , maxlength: "4", placeholder: "0000", pattern: "[0-9]{4}", title: "4자리 숫자를 입력하세요." %>
        </div>
      </div>
    </div>
    <div class="add_info">
      <label for="예약자 이름" >NAME</label>
      <%= text_field_tag :username, nil, placeholder: "홍길동", pattern: "[가-힣]{2,6}", maxlength: "6", title: "6자리이내의 한글 실명을 입력하세요" %>
    </div>
  </div>
    <%= submit_tag "제출", :class => 'ui fluid large yellow submit button' %>
<% end %>
  </div>
</div>
<script>
$(document).ready(function(){
  $('.ui.radio.checkbox').checkbox();
});
</script>
