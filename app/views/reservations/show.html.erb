<p id="notice"><%= notice %></p>

<p>
  <strong>People:</strong>
  
  <p class="user_rev" id="people"><%= @reservation.people %>명 </p>
</p>

<p>
  <strong>Place:</strong>
  
  <p class="user_rev" id="location"><%= @reservation.place %></p>
</p>

<p><strong>시간</strong></p>
<p class="user_rev"><%= @reservation.time.split("T")[0] %></p>
<p class="user_rev" id="time"><%= @reservation.time.split("T")[1]%> 부터  </p>
<p class="user_rev" id="time_end"><%=@reservation.durationTime %> 까지 </p>

<div class="rev_menu">
  <%= link_to '예약 수정!!', edit_reservation_path(@reservation) %> |
  <%= link_to '예약 취소!!!', @reservation, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<style>
  .rev_info{
    display: flex;
    flex-direction: column;
    width: 100%;
    align-content: center;
    justify-content: center;
    padding: 10%;
  }
  .rev_menu{
    display: flex;
  }
  #wrapper{
    width: 50%;
  }
  .user_rev{
    font-size: 150%;
  }
</style>

