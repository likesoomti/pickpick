<div class="reservation_controller">
  <p id="notice"><%= notice %></p>


<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>People</th>
      <th>Time</th>
      <th>Place</th>
      <th>durationTime</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.people %></td>
        <td><%= reservation.time %></td>
        <td><%= reservation.place %></td>
        <td><%= reservation.durationTime %></td>
        <td><%= reservation.user.email %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>

  
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>

<style>
.reservation_controller{
  padding: 5%; 
}
</style>

